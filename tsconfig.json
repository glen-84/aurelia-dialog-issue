{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "es6"],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "rootDir": "src",
        "outDir": "public/assets",
        "newLine": "LF",
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "include": [
        "src/**/*",
        "typings/**/*"
    ],
    "compileOnSave": false
}
